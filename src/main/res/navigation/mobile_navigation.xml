<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home"
    android:background="@android:color/white">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.epicture.ui.home.HomeFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/profile_page" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.epicture.ui.browse.BrowseFragment"
        android:label="@string/title_browse"
        tools:layout="@layout/browse_page"
        android:background="@color/white"


    />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.epicture.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/favorites_page"
        android:background="@android:color/white"/>
</navigation>